@model WebApplication6.Models.Gestresponse

@{
    /**/

    ViewBag.Title = "RsvpForm";
    //Layout = "~/Views/Shared/_Layout.cshtml";
    Layout = null;
}


<link href="~/Content/bootstrap.css" rel="stylesheet" />

<div class="panel panel-success">
    <div class="panel-heading text-center"><h4>RsvpForm</h4></div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            @Html.ValidationSummary()

            <div class="form-group">
                <label>Your Name:</label>
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Your Email:</label>
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Your Phone</label>
                @Html.TextBoxFor(x => x.Phone, new { @class = "form-control" })
            </div>

            <div class="form-group">
                <label>Will you attend?</label>
                @Html.DropDownListFor(x => x.WillAttend, new[]
                {
                    new SelectListItem() { Text = "yes,I'll be there.", Value = bool.TrueString },
                    new SelectListItem(){Text = "Sorry,I can't come",Value = bool.FalseString}
                },"Please choose an option")
            </div>

            <div class="text-center">
                <input class="btn btn-success" type="submit" value="Submit RSVP" />
            </div>
        }
    </div>
</div>